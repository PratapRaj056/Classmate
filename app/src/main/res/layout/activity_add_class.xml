<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.prata.classmate.AddClassActivity">

    <TextView
        android:id="@+id/dayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Day Order:"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/dayOrderSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dialog"/>

    <TextView
        android:id="@+id/periodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dayLabel"
        android:layout_marginTop="20dp"
        android:text="Timing:"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/periodSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/periodLabel"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dialog" />

    <EditText
        android:id="@+id/lectureName"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/periodLabel"
        android:layout_marginTop="20dp"
        android:hint="Lecture Name" />

    <Button
        android:id="@+id/onClickAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:text="Add Lecture"
        android:onClick="onClickLecture"
        android:textColor="@color/colorAccent" />

</RelativeLayout>
